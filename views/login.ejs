<%- include("partials/header") %>
<div class="container" id="login-container">
    <div class="row justify-content-center align-items-center p-3 p-md-0" id="header" >
        <div class="col-12 col-md-5 col-lg-4 h-100" style="background-color: #6c63ff" id="login-form-div">
            <form
                onsubmit="return validateForm()"
                action="/login"
                method="post"
                class="p-1 p-sm-5 p-md-4"
                id="login-form">
                <h1 class="p-2 white" id="login-h1"><b><%=i18n.Login%></b></h1>
                <input
                    type="text"
                    name="username"
                    placeholder="<%=i18n.Username%>"
                    class="outline-color login-input"
                    required
                />
                <input
                    type="password"
                    name="password"
                    placeholder="<%=i18n.Password%>"
                    class="outline-color login-input"
                    required
                />
                <span class="d-flex">
                        <a href="/forgotpassword" id="login-a" class="p-0 p-md-2"
                        ><%=i18n.ForgotYourPassword%> </a>
                </span>
                <div class='text-center d-flex'>
                        <button
                        type="submit"
                        class="
                            btn btn-lg
                            rounded-pill
                            p-2
                            mt-1
                            shadow
                            blue
                            bg-white
                        "
                        id="login-btn"
                        style="width:90px;"
                        ><%=i18n.Login%></button>
                        <button type="button" class="btn btn-lg btn-light rounded-pill shadow-lg blue ms-2 p-2 mt-1" data-bs-toggle="modal" data-bs-target="#langModal" style="width:60px;"> <i class="fa fa-language" aria-hidden="true"></i> </button>
                </div>
            </form>
        </div>
        <div class="col-10 col-md-7 col-lg-8 d-none d-md-block my-auto">
            <div
                id="carouselExampleIndicators"
                class="carousel slide"
                data-bs-ride="carousel"
            >
                <div class="carousel-indicators blue text-center  d-none d-lg-block">
                    <button
                        type="button"
                        data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="0"
                        class="active"
                        aria-current="true"
                        aria-label="Slide 1"
                    ></button>
                    <button
                        type="button"
                        data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="1"
                        aria-label="Slide 2"
                    ></button>
                    <button
                        type="button"
                        data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="2"
                        aria-label="Slide 3"
                    ></button>
                    <button
                        type="button"
                        data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="3"
                        aria-label="Slide 4"
                    ></button>
                </div>
                <div class="carousel-inner my-auto">
                    <div class="carousel-item active" data-bs-interval="5000">
                        <div class="row justify-content-center">
                            <div class="col-lg-5 text-center my-auto d-md-none d-lg-block">
                                <img
                                    src="https://i.pinimg.com/originals/3f/3f/0b/3f3f0b1e7570676e4b3e686e54608328.jpg"
                                    alt=""
                                    width="85%"
                                    class="rounded-circle d-inline-block border border-3"
                                    height="325px"
                                />
                            </div>
                            <div class="col-md-10 col-lg-7 text-center my-auto">
                                <div class="rounded-2 p-2 text-center">
                                    <blockquote>  
                                        <p><strong><%=i18n.EdisonQuote%></strong></p>
                                        <br>
                                        <cite><%=i18n.EdisonName%></cite>
                                    </blockquote>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item" data-bs-interval="5000">
                        <div class="row justify-content-center">
                            <div class="col-lg-5 text-center my-auto d-md-none d-lg-block">
                                <img
                                    src="https://images.fineartamerica.com/images/artworkimages/mediumlarge/2/a-a-milne-literary-legend-john-springfield.jpg"
                                    alt=""
                                    width="85%"
                                    class="rounded-circle d-inline-block border border-3"
                                    height="325px"
                                />
                            </div>
                            <div class="col-md-10 col-lg-7 text-center my-auto">
                                <div class="rounded-2 p-2 text-center">
                                    <blockquote>  
                                        <p><strong><%=i18n.MilneQuote%></strong></p>
                                        <cite><%=i18n.MilneName%></cite>
                                    </blockquote>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item" data-bs-interval="5000">
                        <div class="row justify-content-center">
                            <div class="col-lg-5 text-center my-auto d-md-none d-lg-block">
                                <img
                                    src="https://www.dale-carnegie.co.jp/assets/images/achievements/img03_colour.png"
                                    alt=""
                                    width="85%"
                                    class="rounded-circle d-inline-block  border border-3"
                                    height="325px"
                                />
                            </div>
                            <div class="col-md-10 col-lg-7 text-center my-auto">
                                <div class="p-2 text-center rounded-2">
                                    <blockquote>  
                                        <p><strong><%=i18n.CarnegieQuote%></strong></p>
                                        <cite><%=i18n.CarnegieName%></cite>
                                     </blockquote>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item" data-bs-interval="5000">
                        <div class="row justify-content-center">
                            <div class="col-lg-5 text-center my-auto d-md-none d-lg-block">
                                <img
                                    src="https://chnetwork.org/wp-content/uploads/2015/12/Screen-Shot-2015-12-18-at-12.57.37-PM.png"
                                    alt=""
                                    width="85%"
                                    class="rounded-circle d-inline-block  border border-3"
                                    height="325px"
                                />
                            </div>
                            <div class="col-md-10 col-lg-7 text-center my-auto">
                                <div class="p-2 text-center rounded-2">
                                    <blockquote>  
                                        <p><strong><%=i18n.PoindexterQuote%></strong></p>
                                        <cite><%=i18n.PoindexterName%></cite>
                                     </blockquote>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("partials/langModal") %>
<%- include("partials/footer") %>
<script>
    function validateForm(){
        let login_btn= document.getElementById("login-btn");
        login_btn.style.width="150px";
        login_btn.disabled=true;
        login_btn.textContent="<%=i18n.Loggingin%>...";
        return true;
    }
    if('<%=message.error%>'){
        swal({
            title:'<%=i18n.InvalidCredentials%>..!',
            text:'<%=i18n.Passwordorusernameisincorrect%> <%=i18n.Pleaseentervalidcredentials%>',
            icon:'error',
            button:'Try Again'
        })
    }
</script>
