<div class="modal fade" id="editQuestionModal" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-body p-1">
            <div class="text-end">  
               <button type="button" class="btn-close text-end" data-bs-dismiss="modal" aria-label="Close"></button>      
            </div>
            <form action="/edit/question/<%=question._id%>?_method=PUT" method="post" enctype="multipart/form-data" onsubmit="return validate();">
               <div class="row justify-content-center align-items-center p-2">
                  <div class="col-12 col-lg-6">
                     <div class="row justify-content-center">
                        <div class="form-group col-6 text-center">
                           <label for="upload_q" id='cloud-q' class="d-none">
                              <i class="fa-solid fa-cloud-arrow-up fa-4x blue" data-bs-toggle="tooltip" data-bs-placement="top" title="Upload an Image"></i>
                           </label>
                           <input type="file" name="question" accept="image/png, image/jpeg" class="form-control form-control-lg" placeholder="Enter Image" id="upload_q" onchange="getImagePreview(event,'preview-q','upload_q','cloud-q')" style="display: none">
                        </div>
                        <div id="preview-q" class="my-2 col-11 col-sm-9 col-md-7 text-center">
                           
                        </div>
                     </div>
                  </div>
                  <div class="col-12 col-lg-6">
                     <div class="row justify-content-center">
                        <div class="col-12 col-sm-10">
                           <input type="text" name="name" class="login-input" value="<%=question.name%>" placeholder="<%=i18n.TitleofQuestion%>" required>
                        </div>
                        <ul id='ans_list_modal' class="col-12 col-sm-10 col- text-center" style="overflow: auto;flex-wrap: nowrap;white-space: nowrap;">

                        </ul>
                        <div class="col-12 col-sm-10">
                           <input type="text" class="login-input" value="" id='ans'  placeholder="<%=i18n.NameofObject%>" onkeydown="return event.key != 'Enter';"> 
                           <input type="text" name="answer" class='login-input d-none' id='form_ans'>
                        </div>
                        <div class="col-12 col-sm-10 text-center my-2">
                           <%- include("starLevel") %>
                        </div>
                        <div class="col-12 col-sm-10">
                           <input type="text" name="score" class="login-input" value="<%=question.score%>" placeholder="<%=i18n.Description%>" required>
                        </div>
                     </div>
                  </div>
                     <div class="text-center mt-2">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill"><%=i18n.Update%></button>
                     </div>
               </div>    
             </form>
        </div>
      </div>
    </div>
</div>