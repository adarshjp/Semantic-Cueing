<%- include("partials/header") %>
  <% if(user.role==="admin" ) {%>
    <%- include("partials/adminSideBar") %>
  <% } else if(user.role==="patient" ) { %>
    <%- include("partials/patientSideBar") %>
  <% } else { %>
    <%- include("partials/doctorSideBar") %>
  <% } %>
  <div class="container">
    <div class="text-center py-3 px-5">
      <p class="display-4 fw-bold"><%=i18n.My%> <span class="blue"><%=i18n.Profile%></span></p>
    </div>
    <div class="row justify-content-center mx-1 mx-sm-0">
      <div class="offset-2 col-9 offset-sm-0 col-sm-9 offset-md-0 col-md-10">
        <div class="text-center border border-2 p-3">
          <div class="text-center">
            <img src="/images/profile.jpg" alt="" class="img-responsive img-fluid rounded-circle shadow-lg" width="300px">
          </div>
          <div>
            <h1 class="text-center p-2 display-5 fw-bold">
              <span class="blue">
                <%=user.name%>
              </span>
              <i class="fas fa-user blue"></i>
            </h1>
          </div>
          <div>
            <p class="text-center p-2 display-6 fw-bold">
              <span class="blue">
                <%=user.email%>
              </span>
              <i class="fas fa-envelope blue"></i>
            </p>
          </div>
          <div>
            <p class="text-center p-2 display-6 fw-bold">
              <span class="blue">
                <%=user.age%>
              </span>
              <i class="fas fa-birthday-cake blue"></i>
            </p>
          </div>
          <div>
            <!-- Give a edit button -->
            <a href="/edit/<%=user._id%>" class="btn btn-primary btn-lg btn-block">
              <i class="fas fa-edit"></i>
              <%=i18n.EditProfile%>
            </a>
          </div>
      </div>
      </div>
  </div>
<%- include("partials/footer") %>