<%- include("partials/header") %>
    <% if(user.role==="admin" ) {%>
        <%- include("partials/adminSideBar") %>
    <% } else if(user.role==="patient" ) { %>
        <%- include("partials/patientSideBar") %>
    <% } else { %>
        <%- include("partials/doctorSideBar") %>
    <% } %>
        <div class="container-fluid">
            <div class="offset-2 offset-sm-0 text-center text-center px-5 pt-2">
                <p class="display-4 fw-bold"><%=i18n.Edit%> <span class="blue"><%=i18n.Profile%></span></p>
            </div>
            <div class="row justify-content-center p-1">
                <div class="offset-2 col-9 offset-sm-1 col-sm-10 offset-lg-0 col-xl-7">
                    <div class="text-center border border-2 p-3">
                        <form action="/edit/<%=user._id%>?_method=PUT" method="post">
                            <div class="text-center">
                                <img src="/images/profile.jpg" alt=""
                                    class="img-responsive img-fluid rounded-circle shadow-lg" width="300px">
                            </div>
                            <div>
                                <h1 class="text-center p-2 display-5 fw-bold">
                                    <span class="blue">
                                        <input type="text" value="<%=user.name%>" class="form-control" id="name" name="name">
                                    </span>
                                    <i class="fas fa-user blue"></i>
                                </h1>
                            </div>
                            <div style="overflow: auto;flex-wrap: nowrap;white-space: nowrap;">
                                <p class="text-center p-2 display-6 fw-bold d-none d-md-block">
                                  <span class="blue">
                                    <%=user.email%>
                                  </span>
                                  <i class="fas fa-envelope blue"></i>
                                </p>
                                <p class="text-center fw-bold d-block d-md-none">
                                  <span class="blue">
                                    <%=user.email%>
                                  </span>
                                  <i class="fas fa-envelope blue"></i>
                                </p>
                            </div>
                            <div>
                                <p class="text-center p-2 display-6 fw-bold">
                                    <span class="blue">
                                        <input type="text" name="age" value="<%=user.age%>"
                                            class="form-control" id="age">
                                    </span>
                                    <i class="fas fa-birthday-cake blue"></i>
                                </p>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-primary btn-lg btn-block">
                                    <i class="fas fa-edit"></i>
                                    <%=i18n.EditProfile%>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
<%- include("partials/footer") %>